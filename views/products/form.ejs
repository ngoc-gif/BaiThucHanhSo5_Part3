
<h2><%= product && product._id ? 'Cập nhật sản phẩm' : 'Thêm sản phẩm mới' %></h2>

<form method="post" action="<%= product._id ? '/products/' + product._id + '?_method=PUT' : '/products' %>" class="w-50">
  <div class="mb-3">
    <label class="form-label">Tên sản phẩm</label>
    <input name="name" type="text" class="form-control" value="<%= product.name || '' %>" required>
  </div>
  <div class="mb-3">
    <label class="form-label">Giá</label>
    <input name="price" type="number" step="0.01" class="form-control" value="<%= product.price || 0 %>">
  </div>
  <div class="mb-3">
    <label class="form-label">Số lượng</label>
    <input name="quantity" type="number" class="form-control" value="<%= product.quantity || 0 %>">
  </div>
  <div class="mb-3">
    <label class="form-label">Nhà cung cấp</label>
    <select name="supplier" class="form-select" required>
      <% suppliers.forEach(s => { %>
        <option value="<%= s._id %>" <%= product.supplier && product.supplier.toString() === s._id.toString() ? 'selected' : '' %>>
          <%= s.name %>
        </option>
      <% }) %>
    </select>
  </div>
  <button class="btn btn-success">Lưu</button>
</form>
