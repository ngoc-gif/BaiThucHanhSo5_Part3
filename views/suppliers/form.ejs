
<h2><%= supplier && supplier._id ? 'Cập nhật nhà cung cấp' : 'Thêm nhà cung cấp mới' %></h2>

<form method="post" action="<%= supplier._id ? '/suppliers/' + supplier._id + '?_method=PUT' : '/suppliers' %>" class="w-50">
  <div class="mb-3">
    <label class="form-label">Tên</label>
    <input name="name" type="text" class="form-control" value="<%= supplier.name || '' %>" required>
  </div>
  <div class="mb-3">
    <label class="form-label">Địa chỉ</label>
    <input name="address" type="text" class="form-control" value="<%= supplier.address || '' %>">
  </div>
  <div class="mb-3">
    <label class="form-label">Điện thoại</label>
    <input name="phone" type="text" class="form-control" value="<%= supplier.phone || '' %>">
  </div>
  <button class="btn btn-success">Lưu</button>
</form>
